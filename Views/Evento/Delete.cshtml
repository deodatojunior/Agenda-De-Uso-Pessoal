@model ProjetoIntegrador.Models.Evento

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover evento</h1>

<h3>Tem certeza que deseja remover este evento?</h3>
<div>
    <h4>Evento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição do evento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
        <dt class = "col-sm-2">
            Data do evento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.data_evento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a listagem de eventos</a>
    </form>
</div>
