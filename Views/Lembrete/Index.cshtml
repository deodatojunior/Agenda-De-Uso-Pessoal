@model IEnumerable<ProjetoIntegrador.Models.Lembrete>

@{
    ViewData["Title"] = "Index";
}

<h1>Página inicial</h1>

<p>
    <a asp-action="Create">Criar novo lembrete</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Data do lembrete
            </th>
            <th>
                Descrição do lembrete
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.texto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Remover</a> |
                <a asp-controller="Anotacao_Lembrete" asp-action="Create" asp-area="">Criar anotação para lembretes</a>
            </td>
        </tr>
}
    </tbody>
</table>
