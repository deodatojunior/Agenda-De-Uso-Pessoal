@model ProjetoIntegrador.Models.Lembrete

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar lembrete</h1>

<h3>Tem certeza que quer deletar esse lembrete?</h3>
<div>
    <h4>Lembrete</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Data do lembrete
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.data)
        </dd>
        <dt class = "col-sm-2">
            Texto do lembrete
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.texto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a listagem de lembretes</a>
    </form>
</div>
