@model ProjetoIntegrador.Models.Anotacao

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar anotação</h1>

<h3>Tem certeza que deseja deletar essa anotação</h3>
<div>
    <h4>Anotacao</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição da anotação
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a listagem de anotações</a>
    </form>
</div>
