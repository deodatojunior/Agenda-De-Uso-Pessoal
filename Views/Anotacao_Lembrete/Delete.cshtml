@model ProjetoIntegrador.Models.Anotacao_Lembrete

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover anotação de lembrete</h1>

<h3>Tem certeza que deseja remover essa anotação?</h3>
<div>
    <h4>Anotacao_Lembrete</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição da anotação
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
        <dt class = "col-sm-2">
            Código do lembrete
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.lembrete.id)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a listagem de anotações</a>
    </form>
</div>
