@model ProjetoIntegrador.Models.Anotacao_Lembrete

@{
    ViewData["Title"] = "Create";
}

<h1>Criar anotação para lembrete</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="descricao" class="control-label">Descrição da anotação</label>
                <input asp-for="descricao" class="form-control" />
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lembreteId" class="control-label">Código do lembrete</label>
                <select asp-for="lembreteId" class ="form-control" asp-items="ViewBag.lembreteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a listagem de anotações</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
